# ============================================
# HeadlessForms Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================

# ─────────────────────────────────────────────
# Core Settings
# ─────────────────────────────────────────────

# Server port (default: 8080)
PORT=8080

# Application environment: development | staging | production
ENV=development

# Base URL for generating links (emails, webhooks, etc.)
# Leave empty for auto-detection in development
BASE_URL=

# Data directory for SQLite database
# Leave empty to use current directory
DATA_DIR=

# ─────────────────────────────────────────────
# Security
# ─────────────────────────────────────────────

# JWT secret for token signing (REQUIRED in production!)
# Generate with: openssl rand -base64 32
JWT_SECRET=change-me-in-production-please!

# ─────────────────────────────────────────────
# SMTP Email Configuration
# ─────────────────────────────────────────────
# Leave SMTP_HOST empty to disable email notifications

# SMTP server hostname
SMTP_HOST=

# SMTP server port (default: 587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP authentication
SMTP_USERNAME=
SMTP_PASSWORD=

# Sender email address
SMTP_FROM=noreply@example.com

# Sender display name
SMTP_FROM_NAME=HeadlessForms

# Enable TLS encryption (true/false)
SMTP_TLS=true

# ─────────────────────────────────────────────
# Database Configuration
# ─────────────────────────────────────────────
# SQLite (Default) - Uses local file
# Set DATA_DIR to control where the database file is stored
DATA_DIR=

# PostgreSQL (Recommended for Production)
# Uncomment and configure for PostgreSQL:
# DATABASE_URL=postgres://username:password@localhost:5432/headlessforms?sslmode=require

# ─────────────────────────────────────────────
# Logging & Debugging
# ─────────────────────────────────────────────

# Log level: debug | info | warn | error
LOG_LEVEL=info

# Enable request logging (true/false)
LOG_REQUESTS=true
